<div class="container d-flex justify-content-center align-items-center min-vh-100">
  <div class="row w-100">
    <div class="col-md-6 col-lg-4 mx-auto">
      <h2 class="text-center mb-4">¿Olvidaste tu contraseña?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'needs-validation', novalidate: true }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { class: 'form-control', autocomplete: 'email', placeholder: 'Email address' } %>
        </div>

        <div class="form-group d-flex justify-content-center mb-4"> <!-- Agregado mb-4 para margen inferior -->
          <%= f.button :submit, "Continuar", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center mt-3"> <!-- Agregado mt-3 para margen superior -->
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
