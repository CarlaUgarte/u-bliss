    <div class="row justify-content-center">
      <div class="col-md-4 mb-4">
        <div class="card shadow-lg">
          <img src="<%= asset_path('home/salud.png')%>" class="card-img-top rounded custom-img" alt="Curso 4">
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card shadow-lg">
          <img src="<%= asset_path('home/negocios.png')%>" class="card-img-top rounded custom-img" alt="Curso 5">
