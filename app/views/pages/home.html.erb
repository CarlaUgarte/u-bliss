<!-- Banner Principal -->
    <section class="hero">
        <div class="hero-text">
            <h1>¡Aprende de los mejores mentores del mundo!</h1>
            <p class="big">Inicia tu viaje creativo con los cursos más innovadores.</p>
            <div class="buttons">
                <%= link_to "Explora Syllabuses", syllabuses_path, class: "btn-primary" %>
            </div>
        </div>
    </section>

    <!-- Resultados de búsqueda -->
        <% if params[:query].present? %>
    <h3>Resultados de búsqueda:</h3>

    <h4>Categorías:</h4>
    <% if @categories.any? %>
        <ul>
        <% @categories.each do |category| %>
            <li><%= category.name %></li>
        <% end %>
        </ul>
    <% else %>
        <p>No se encontraron categorías para "<%= params[:query] %>".</p>
    <% end %>

    <h4>Silabus:</h4>
    <% if @syllabuses.any? %>
        <ul>
        <% @syllabuses.each do |syllabus| %>
            <li><%= syllabus.title %></li>
        <% end %>
        </ul>
    <% else %>
        <p>No se encontraron silabus para "<%= params[:query] %>".</p>
    <% end %>

    <h4>Módulos:</h4>
    <% if @syllabuses_modules.any? %>
        <ul>
        <% @syllabuses_modules.each do |mod| %>
            <li><%= mod.name %></li>
        <% end %>
        </ul>
    <% else %>
        <p>No se encontraron módulos para "<%= params[:query] %>".</p>
    <% end %>

    <h4>Lecturas:</h4>
    <% if @lectures.any? %>
        <ul>
        <% @lectures.each do |lecture| %>
            <li><%= lecture.details %></li>
        <% end %>
        </ul>
    <% else %>
        <p>No se encontraron lecturas para "<%= params[:query] %>".</p>
    <% end %>
    <% end %>


<section>
  <div class="container">
    <div class="row mb-2">
      <div class="col-12">
        <h1 class="mt-5">Syllabuses Destacados</h1>
      </div>
    </div>

    <div class="row mb-5">
      <% @categories.each do |category| %>
        <% if category.syllabuses.any? %>
          <div class="col-12 col-md-4 mb-4 mt-5">
            <div class="custom-card-vertical rounded-5 bg-light">
              <img src="https://via.placeholder.com/600x200" alt="Imagen" class="card-image">
              <div class="card-body d-flex flex-column">
                <!-- Iterate through syllabuses in the category -->
                <% category.syllabuses.each do |syllabus| %>
                  <h3 class="card-title"><%= syllabus.title %></h3>
                  <p class="card-subtitle">Mentor: <strong><%= syllabus.user.email %></strong></p>
                  <p class="card-text"><%= syllabus.description %></p>
                  <div class="d-flex justify-content-center mt-2 gap-2">
                    <!-- Link to the syllabus detail page -->
                    <%= link_to "Ver más", syllabus_path(syllabus), class: "btn btn-primary custom-btn" %>
                  </div>
                <% end %> <!-- End syllabus loop -->
              </div>
            </div>
          </div>
        <% end %> <!-- End category check -->
      <% end %> <!-- End categories loop -->
    </div>
  </div>
</section>













