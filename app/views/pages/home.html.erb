<section class="hero">
    <div class="hero-text">
        <h1>¡Aprende con los mejores mentores!</h1>
        <p class="big">Aprende y comparte con tus pares.</p>
        <div class="buttons">
            <%= link_to "Explora Syllabuses", syllabuses_path, class: "btn-primary" %>
        </div>
    </div>
</section>

        <% if params[:query].present? %>
    <h3>Resultados de búsqueda:</h3>

    <h4>Categorías:</h4>
    <% if @categories.any? %>
        <ul>
        <% @categories.each do |category| %>
            <li><%= category.name %></li>
        <% end %>
        </ul>
    <% else %>
        <p>No se encontraron categorías para "<%= params[:query] %>".</p>
    <% end %>

    <h4>Silabus:</h4>
    <% if @syllabuses.any? %>
        <ul>
        <% @syllabuses.each do |syllabus| %>
            <li><%= syllabus.title %></li>
        <% end %>
        </ul>
    <% else %>
        <p>No se encontraron silabus para "<%= params[:query] %>".</p>
    <% end %>

    <h4>Módulos:</h4>
    <% if @syllabuses_modules.any? %>
        <ul>
        <% @syllabuses_modules.each do |mod| %>
            <li><%= mod.name %></li>
        <% end %>
        </ul>
    <% else %>
        <p>No se encontraron módulos para "<%= params[:query] %>".</p>
    <% end %>

    <h4>Lecturas:</h4>
    <% if @lectures.any? %>
        <ul>
        <% @lectures.each do |lecture| %>
            <li><%= lecture.details %></li>
        <% end %>
        </ul>
    <% else %>
        <p>No se encontraron lecturas para "<%= params[:query] %>".</p>
    <% end %>
    <% end %>


<section>
  <div class="container">
    <div class="row mb-2">
      <div class="col-12">
        <h2 class="mt-5">Syllabuses Destacados</h2>
      </div>
    </div>

    <div class="row mb-5">
      <% @categories.each do |category| %>
        <% if category.syllabuses.any? %>
          <div class="col-12 col-md-4 mb-2 mt-5">
            <div class="custom-card-vertical rounded-5 bg-light">
                        <%= image_tag "categorias/#{category.name}.jpg", class: "img-category" %>

              <div class="card-body d-flex flex-column">
                <!-- Mostrar solo el primer syllabus de la categoría -->
                <% syllabus = category.syllabuses.first %> <!-- Solo el primer syllabus -->
                <h3 class="card-title"><%= syllabus.title %></h3>
                <p class="card-subtitle">Mentor: <strong><%= syllabus.user.email %></strong></p>
                <p class="card-text"><%= syllabus.description %></p>
                <div class="d-flex justify-content-center mt-2 gap-2">
                  <!-- Enlace al detalle del syllabus -->
                  <%= link_to "Ver más", syllabus_path(syllabus), class: "btn btn-primary custom-btn" %>
                </div>
              </div>
            </div>
          </div>
        <% end %> <!-- Fin verificación si hay syllabuses en la categoría -->
      <% end %> <!-- Fin del ciclo de categorías -->
    </div>
  </div>
</section>












