<%= turbo_frame_tag :lecture do %>
  <%= simple_form_for([ @syllabus_module, @lecture], html: { class: 'container my-5', style: 'max-width: 600px;' }) do |f| %>  <!-- Título del modulo -->
  <div class= "d-flex m-3 justify-content-center">
    <div class="form-group">
      <%= f.input :details, label: 'Titulo de la Lección', input_html: { class: 'form-control' } %>
    </div>

    <!-- Botón de envío -->
    <div class= "d-flex m-3 justify-content-center">
      <div class="form-actions text-center m-3">
        <%= f.button :submit, 'Agregar', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
