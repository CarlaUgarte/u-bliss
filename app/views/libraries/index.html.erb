<h2>Mi Biblioteca</h2>

<div class="library-cards-container">
  <% @libraries.each do |library| %>
    <div class="library-card">
      <h4 class="library-title"><%= library.syllabus.title %></h4>
      <p class="library-description"><%= library.syllabus.description %></p>
    </div>
  <% end %>
</div>
