<%= turbo_frame_tag :syllabus_module do %>
  <div id="input-module" class="custom-card-new rounded-5 bg-light mb-5">
    <%= simple_form_for([@syllabus, @syllabus_module], html: { class: 'container d-flex', style: 'max-width: 600px;' }) do |f| %>  <!-- Título del modulo -->

      <div class="form-group mt-4 flex-grow-1 m-2">
        <%= f.input :name, label: 'Título del Modulo', input_html: { class: 'form-control' } %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, 'Agregar', class: 'btn btn-primary mt-5' %>
      </div>
    <% end %>
  </div>
<% end %>
